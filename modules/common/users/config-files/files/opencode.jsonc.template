{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "opencode/gpt-5.2-codex",
  "autoupdate": true,
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["mcp-server-playwright"],
      "enabled": true,
    },
    "browser": {
      "type": "local",
      "command": ["npx", "@browsermcp/mcp@latest"],
      "enabled": true,
    },
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
    },
    "kagi": {
      "type": "local",
      "command": ["uvx", "kagimcp"],
      "environment": {
        "KAGI_API_KEY": "{{KAGI_API_KEY_PLACEHOLDER_REPLACE_AT_BUILD_TIME}}",
      },
    },
  },
}
